{
  "compilerOptions": {
    "target": "es2015",
    "jsx": "react",
    "noEmit": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "typeRoots" : [
      "node_modules/@types",
      "src/types"
    ],
    "lib": [
      "es2017"
    ],
    "baseUrl": "."
  },
  "exclude": [
    "node_modules"
  ]
}
